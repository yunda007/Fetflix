<center>
    <h1>ACCION</h1>
</center>
<br>
<div class="row">
  <div class="col-2"></div>
  <div class="col-1"></div>
  <div class="col-9">
    <iframe width="700" height="415" src="https://www.youtube.com/embed/9dtxxbLz2hQ?autoplay=1&mute=1&enablejsapi=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>
  
</div>

{{#each pelicula}}
  
  <div class="card-group">
    <div class="card">
      <img src="{{imagen}}" class="card-img-top" width="400px">
      <div class="card-body">
        <h5 class="card-title">{{nombre}}</h5>
        <p>{{director}}</p>
        <p>{{actores}}</p>
        <p>{{descripcion}}</p>
        <p>{{duracion}}</p>
        <p>{{pais}}</p>

        <p class="card-text"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{{id}}">
                              Ver Trailer
                            </button></p>
        <p class="card-text"><small class="text-muted">{{fecha}}</small></p>
      </div>
    </div>
  
{{/each}}  
</div>  

<!-- Button trigger modal -->


<!-- Modal -->
{{#each pelicula}}
<div class="modal fade" id="exampleModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{nombre}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <iframe width="450" height="415" src="{{trailer}}" allowfullscreen></iframe>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       
      </div>
    </div>
  </div>
</div>
{{/each}}